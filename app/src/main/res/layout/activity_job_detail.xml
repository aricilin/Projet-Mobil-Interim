        <Button
            android:id="@+id/Partager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partager"
            app:layout_constraintTop_toBottomOf="@+id/enregistrer_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:onClick="onPartagerButtonClick" />
        <Button
            android:id="@+id/Appeler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appeler"
            app:layout_constraintTop_toBottomOf="@+id/Partager"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:onClick="onPartagerButtonClick" />
        <Button
            android:id="@+id/envoyer_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Envoyer un mail"
            app:layout_constraintTop_toBottomOf="@+id/Appeler"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
             />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>